### base.cfg
#
# Nagios configuration file
#
# managed by Puppet, local changes will be overwritten
#

### Basic checks ###
command[check_disk_root]=/usr/lib64/nagios/plugins/check_disk -w 768 -c 512 -p /
command[check_disk_boot]=/usr/lib64/nagios/plugins/check_disk -w 48 -c 32 -p /boot
command[check_load]=/usr/lib64/nagios/plugins/check_load -w 10,8,6 -c 16,14,12
command[check_procs]=/usr/lib64/nagios/plugins/check_procs -w 300 -c 400
command[check_procs_zombies]=/usr/lib64/nagios/plugins/check_procs -w 1 -c 5 -s Z
command[check_users]=/usr/lib64/nagios/plugins/check_users -w 10 -c 15
command[check_swap]=/usr/lib64/nagios/plugins/check_swap -w 30% -c 10%
command[check_ssh]=/usr/lib64/nagios/plugins/check_ssh localhost
